generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  password      String
  role          Role            @default(APPLIER)
  phone         String?
  avatar        String?
  resume        String?
  bio           String?
  skills        String[]
  location      String?
  
  // Relations
  jobs          Job[]           @relation("RecruiterJobs")
  applications  Application[]
  
  // Timestamps
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@map("users")
}

model Job {
  id               Int             @id @default(autoincrement())
  title            String
  description      String
  requirements     String?
  salary           String?         // "50k-70k", "Negotiable", etc.
  location         String
  jobType          JobType?        @default(FULL_TIME)
  experienceLevel  ExperienceLevel? @default(MID)
  category         String?         // "Engineering", "Design", etc.
  tags             String[]        // ["JavaScript", "React", "Node.js"]
  
  // Relations
  recruiter        User            @relation("RecruiterJobs", fields: [recruiterId], references: [id])
  recruiterId      Int
  applications     Application[]
  
  // Status
  status           JobStatus       @default(OPEN)
  isRemote         Boolean         @default(false)
  
  // Timestamps
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  expiresAt        DateTime?       // Job posting expiration

  @@map("jobs")
}

model Application {
  id          Int           @id @default(autoincrement())
  coverLetter String?
  resume      String?       // Candidate can upload different resume per application
  
  // Relations
  applier     User          @relation(fields: [applierId], references: [id])
  applierId   Int
  job         Job           @relation(fields: [jobId], references: [id])
  jobId       Int
  
  // Status
  status      AppStatus     @default(PENDING)
  
  // Timestamps
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Ensure one application per candidate per job
  @@unique([applierId, jobId])
  @@map("applications")
}

// Your existing enums
enum Role {
  ADMIN
  RECRUITER
  APPLIER
}

enum JobStatus {
  OPEN
  CLOSED
}

enum AppStatus {
  PENDING
  REVIEWED
  ACCEPTED
  REJECTED
  WITHDRAWN
}

// New enums for enhanced functionality
enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  REMOTE
}

enum ExperienceLevel {
  ENTRY
  MID
  SENIOR
  LEAD
}